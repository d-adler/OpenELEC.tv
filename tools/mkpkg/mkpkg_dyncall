echo "getting sources..."
  svn checkout http://dyncall.org/svn/dyncall/trunk/dyncall dyncall-latest

echo "getting version..."
  cd dyncall-latest
    SVN_REV=`LANG=C svn info 2>/dev/null | grep Revision: | sed -e 's/.*\: //'`
    echo $SVN_REV
  cd ..

echo "copying sources..."
  rm -rf dyncall-$SVN_REV
  cp -R dyncall-latest dyncall-$SVN_REV

echo "cleaning sources..."
  find dyncall-$SVN_REV -name .svn -exec rm -rf {} ";"

echo "packing sources..."
  tar cvjf dyncall-$SVN_REV.tar.bz2 dyncall-$SVN_REV

echo "remove temporary sourcedir..."
  rm -rf dyncall-$SVN_REV
